@model Employee
@{
    ViewData["Title"] = "Manage Employee";
}

@{
    if(Model.UniqueId == 0)
    {
        <h3>Insert a New Employee</h3>
    }
    else
    {
        <h3>Update Employee Informations</h3>
    }
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="InsertOrUpdate" asp-method="post" asp-route-id=“@Model.UniqueId”>

            <div class="mt-2 mb-2">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-warning" role="alert"> @Html.ValidationSummary() </div>
                }
            </div>

            <input type="hidden" asp-for="UniqueId" />

            <div class="form-group">
                <label asp-for="FirstName" class="control-label fw-bold">First Name</label>
                <input asp-for="FirstName" class="form-control mb-1" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label fw-bold">Last Name</label>
                <input asp-for="LastName" class="form-control mb-1" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="BirthDate" class="control-label fw-bold">Date of Birth (MM/DD/YYYY)</label>
                <input asp-for="BirthDate" class="form-control mb-1" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="JoinDate" class="control-label fw-bold">Joining Date (MM/DD/YYYY)</label>
                <input asp-for="JoinDate" class="form-control mb-1" />
                <span asp-validation-for="JoinDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Designation" class="control-label fw-bold"></label>
                <input asp-for="Designation" class="form-control mb-1"/>
                <span asp-validation-for="Designation" class="text-danger"></span>
            </div>

            <div class="form-group ">
                <input type="submit" value="  Save  " class="btn btn-dark mt-2 mb-2" />
                <a class="btn btn-light mt-2 mb-2" asp-action="Index">Cancel</a>
            </div>

        </form>
    </div>
</div>




